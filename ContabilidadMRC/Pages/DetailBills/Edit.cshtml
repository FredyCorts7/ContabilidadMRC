@page
@model ContabilidadMRC.Pages.DetailBills.EditModel

@{
    ViewData["Title"] = "Editar Detalles de Facturas";
}

<h1>Ediar Detalle de Factura</h1>

<h4>Detalle de Factura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DetailBill.DetailBillID" />
            <div class="form-group">
                <label asp-for="DetailBill.BillID" class="control-label"></label>
                <select asp-for="DetailBill.BillID" class="form-control" asp-items="ViewBag.BillID"></select>
                <span asp-validation-for="DetailBill.BillID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailBill.ProductID" class="control-label"></label>
                <select asp-for="DetailBill.ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                <span asp-validation-for="DetailBill.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailBill.Quantity" class="control-label"></label>
                <input asp-for="DetailBill.Quantity" class="form-control" />
                <span asp-validation-for="DetailBill.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Volver a Inicio Detalles de Facturas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
