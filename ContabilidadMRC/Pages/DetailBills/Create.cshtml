@page
@model ContabilidadMRC.Pages.DetailBills.CreateModel

@{
    ViewData["Title"] = "Insertar Detalle Facturas";
}

<h1>Insertar Detalle de Factura</h1>

<h4>Detalle de Factur</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DetailBill.BillID" class="control-label">ID de Factura</label>
                <select asp-for="DetailBill.BillID" class ="form-control" asp-items="ViewBag.BillID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DetailBill.ProductID" class="control-label">ID de Producto</label>
                <select asp-for="DetailBill.ProductID" class ="form-control" asp-items="ViewBag.ProductID"></select>
            </div>
            <div class="form-group">
                <label asp-for="DetailBill.Quantity" class="control-label"></label>
                <input asp-for="DetailBill.Quantity" class="form-control" />
                <span asp-validation-for="DetailBill.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a Inicio Detalles de Facturas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
