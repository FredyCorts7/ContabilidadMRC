@page
@model ContabilidadMRC.Pages.DetailBills.IndexModel

@{
    ViewData["Title"] = "Inicio Detalles de Factura";
}

<h1>Inicio Detalles de Factura</h1>

<p>
    <a asp-page="Create">Insertar Detalle de Factura</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DetailBill[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailBill[0].Bill)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DetailBill[0].Product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DetailBill) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bill.CodeBill)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Code)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DetailBillID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.DetailBillID">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.DetailBillID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
