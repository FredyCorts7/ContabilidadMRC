@page
@model ContabilidadMRC.Pages.Bills.CreateModel

@{
    ViewData["Title"] = "Insertar Factura";
}

<h1>Insertar Factura</h1>

<h4>Factura</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Bill.CodeBill" class="control-label"></label>
                <input asp-for="Bill.CodeBill" class="form-control" />
                <span asp-validation-for="Bill.CodeBill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bill.EmployeeID" class="control-label">Id de Empleado</label>
                <select asp-for="Bill.EmployeeID" class ="form-control" asp-items="ViewBag.EmployeeID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Bill.CustomerID" class="control-label">Id de Cliente</label>
                <select asp-for="Bill.CustomerID" class ="form-control" asp-items="ViewBag.CustomerID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Bill.CreatedAt" class="control-label"></label>
                <input asp-for="Bill.CreatedAt" class="form-control" />
                <span asp-validation-for="Bill.CreatedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a Inicio de Facturación</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
