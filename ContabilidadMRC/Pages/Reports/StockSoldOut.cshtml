@page
@model ContabilidadMRC.Pages.Reports.StockSoldOutModel
@{
    ViewData["Title"] = "StockSoldOut";
}

<h1>Productos agotados</h1>

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].TypeProductID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].BrandID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product[0].Stock)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Product)

        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Code)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TypeProduct.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stock)
                </td>

            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="Index">Volver a Inicio de Reportes</a>
</div>
