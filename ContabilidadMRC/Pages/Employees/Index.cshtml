@page
@model ContabilidadMRC.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Inicio de Empleados";
}

<h1>Inicio de Empleados</h1>

<p>
    <a asp-page="Create">Insertar Empleado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].IdCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].BirthDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Username)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Username)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EmployeeID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.EmployeeID">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.EmployeeID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
