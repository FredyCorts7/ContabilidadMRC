@page
@model ContabilidadMRC.Pages.Brands.IndexModel

@{
    ViewData["Title"] = "Inicio de Marcas";
}

<h1>Inicio de Marcas</h1>

<p>
    <a asp-page="Create">Insertar Marca</a>
</p>
<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Brand[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Brand) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.BrandID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.BrandID">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.BrandID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
