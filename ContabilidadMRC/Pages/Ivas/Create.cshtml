@page
@model ContabilidadMRC.Pages.Ivas.CreateModel

@{
    ViewData["Title"] = "Insertar Ivas";
}

<h1>Insertar Iva</h1>

<h4>Iva</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Iva.Value" class="control-label"></label>
                <input asp-for="Iva.Value" class="form-control" />
                <span asp-validation-for="Iva.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Iva.Description" class="control-label"></label>
                <input asp-for="Iva.Description" class="form-control" />
                <span asp-validation-for="Iva.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver a Inicio de Ivas</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
