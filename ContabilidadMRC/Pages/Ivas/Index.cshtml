@page
@model ContabilidadMRC.Pages.Ivas.IndexModel

@{
    ViewData["Title"] = "Inicio Ivas";
}

<h1>Inicio de Ivas</h1>

<p>
    <a asp-page="Create">Insertar Iva</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Iva[0].Value)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iva[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Iva) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.IvaID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.IvaID">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.IvaID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
