@page
@model ContabilidadMRC.Pages.TypeProducts.IndexModel

@{
    ViewData["Title"] = "Inicio de Tipo de Productos";
}

<h1>Inicio Tipos de Productos</h1>

<p>
    <a asp-page="Create">Insertar Tipo de Producto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TypeProduct[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeProduct[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TypeProduct[0].Iva)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TypeProduct) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Iva.Description)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.TypeProductID">Editar</a> |
                <a asp-page="./Details" asp-route-id="@item.TypeProductID">Detalles</a> |
                <a asp-page="./Delete" asp-route-id="@item.TypeProductID">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
